    <div style="height: 200px;"></div>
  </section>

  <!-- Content section -->
  <section class="py-5">
    <div class="container">
      <div class = "d-flex justify-content-around">
        <h1>Managers</h1>
      </div>
      <div class = "d-flex justify-content-around">
        <p class="lead">Login</p>
      </div>  
      <%= button_to "Login", login_path, :id => "button", :class => "btn center-block", :method => :get %> <!--login_path is defined in routes.rb-->
    </div>
  </section>


